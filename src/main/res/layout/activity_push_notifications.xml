<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/push_notifications"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/black"
    tools:context=".PushNotificationsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/very_light_blue"
            android:text="Push Notifications"
            android:textStyle="bold"
            android:gravity="center" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#202020"
            android:textColor="@color/very_light_blue"
            android:text="Save" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#202020" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Push Notifications From Schedufy"
        android:textColor="@color/very_light_blue"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/very_light_blue"
            android:text="SMS notifications"
            android:layout_marginTop="8dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sms_notification_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-60dp"
            android:minWidth="48dp"
            android:minHeight="48dp" />
    </LinearLayout>
</LinearLayout>


